    "surround.custom": {
        "bold": {
            "description": "surround with bold",
            "label": "mdx bold",
            "snippet": "**$TM_SELECTED_TEXT$0**"
        },
        "zAction": {
            "description": "surround with default",
            "label": "Action Surround",
            "snippet": "{@action ${TM_SELECTED_TEXT/(?:(\\w+)|(\\w*)\\W+(\\w*))/${1:/downcase}${2:/downcase}${3:/capitalize}/g}}"
        },
        "zCreatureType": {
            "description": "surround with default",
            "label": "CT Surround",
            "snippet": "{@ct ${TM_SELECTED_TEXT/(?:(\\w+)|(\\w*)\\W+(\\w*))/${1:/downcase}${2:/downcase}${3:/capitalize}/g}}"
        },
        "zDefault": {
            "description": "surround with default",
            "label": "Default",
            "snippet": "{@ ${TM_SELECTED_TEXT/(?:(\\w+)|(\\w*)\\W+(\\w*))/${1:/downcase}${2:/downcase}${3:/capitalize}/g}}"
        },
        "zFeature": {
